<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3C"
    android:backgroundTint="#555555"
    tools:context=".FragmentRegister">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:fontFamily="@font/aclonica"
        android:text="Customer Registration"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <EditText
        android:id="@+id/nameRegister"
        android:layout_width="295dp"
        android:layout_height="66dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="@font/aclonica"
        android:hint="Name"
        android:textColor="#FFFFFF"
        android:textColorHint="#939393"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/loginRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLabel"
        app:layout_constraintVertical_bias="0.315" />

    <EditText
        android:id="@+id/loginRegister"
        android:layout_width="295dp"
        android:layout_height="66dp"
        android:layout_marginTop="147dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/aclonica"
        android:hint="Login"
        android:textColor="#FFFFFF"
        android:textColorHint="#939393"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/passReservation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLabel"
        app:layout_constraintVertical_bias="0.56" />

    <EditText
        android:id="@+id/passReservation"
        android:layout_width="295dp"
        android:layout_height="66dp"
        android:layout_marginBottom="240dp"
        android:fontFamily="@font/aclonica"
        android:hint="Password"
        android:textColor="#FFFFFF"
        android:textColorHint="#939393"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="214dp"
        android:layout_height="69dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="120dp"
        android:backgroundTint="#FD0458"
        android:fontFamily="@font/aclonica"
        android:text="Register"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passReservation"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>